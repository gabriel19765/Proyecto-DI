<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Estilo global para ContentPage  -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorFondoBlanco}" />
    </Style>

    <!--  Estilo global para Label  -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource ColorTextoNegro}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="Default" />
    </Style>

    <!--  Estilo para títulos  -->
    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource ColorTextoNegro}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>
    <Style x:Key="SubtitleLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource ColorTextoNegro}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <!--  Estilo global para Entry  -->
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorGrisClaro}" />
        <Setter Property="TextColor" Value="{DynamicResource ColorTextoNegro}" />
        <Setter Property="PlaceholderColor" Value="{DynamicResource ColorGrisOscuro}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="Margin" Value="0,5,0,5" />
    </Style>

    <!--  Estilo global para Button e ImageButton  -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorVerdeBase}" />
        <Setter Property="TextColor" Value="{DynamicResource ColorFondoBlanco}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>
    <Style TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorVerdeBase}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!--  Estilo para botones secundarios  -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorVerdeClaro}" />
        <Setter Property="TextColor" Value="{DynamicResource ColorTextoNegro}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>
    <Style x:Key="SecondaryImageButton" TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorVerdeClaro}" />
        <Setter Property="CornerRadius" Value="100" />
    </Style>

    <!--  Estilo global para Frame  -->
    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorGrisClaro}" />
        <Setter Property="BorderColor" Value="{DynamicResource ColorGrisSuave}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <!--  Estilo global para BoxView (líneas divisorias o resaltados)  -->
    <Style TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorGrisSuave}" />
    </Style>

    <!--  Estilo global para ActivityIndicator  -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{DynamicResource ColorVerdeBase}" />
    </Style>

    <!--  Estilo global para Picker  -->
    <Style TargetType="Picker">
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorFondoBlanco}" />
        <Setter Property="TextColor" Value="{DynamicResource ColorTextoNegro}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,5,0,5" />
    </Style>

    <!--  Estilo para errores (etiquetas de error)  -->
    <Style x:Key="ErrorLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource ColorError}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="0,5,0,5" />
    </Style>

    <!--  Estilo global para ScrollView  -->
    <Style TargetType="ScrollView">
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorFondoBlanco}" />
    </Style>

    <!--  Estilo global para CollectionView  -->
    <Style TargetType="CollectionView">
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorFondoBlanco}" />
    </Style>

    <!--  Estilo global para SearchBar  -->
    <Style TargetType="SearchBar">
        <Setter Property="BackgroundColor" Value="{DynamicResource ColorGrisClaro}" />
        <Setter Property="TextColor" Value="#333333" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="PlaceholderColor" Value="#555555" />
    </Style>

</ResourceDictionary>
